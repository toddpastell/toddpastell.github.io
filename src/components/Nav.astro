---
const pages = [
  { url: '/', label: 'Home' },
  { url: '/privacy', label: 'Privacy' },
];
const currentPath = Astro.url.pathname;
---

<nav class='flex gap-2 py-8'>
  {
    pages.map((page) => (
      <a
        class:list={[
          'rounded px-4 py-2 transition hover:bg-zinc-200 active:bg-zinc-300',
          currentPath === page.url && 'underline',
        ]}
        href={page.url}>
        {page.label}
      </a>
    ))
  }
</nav>
